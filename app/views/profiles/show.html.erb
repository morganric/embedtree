<div class="col-md-10 col-md-offset-1">
<div class="col-md-3">

<p>
  <%= image_tag(@profile.image.url(:square) || "http://res.cloudinary.com/dqiy3fupl/image/upload/c_fill,h_200,w_200/v1441999507/fwtfqghdcnua2z6nfsh6.png", :class => "img-circle", :height => "200px") %>
</p>

</div>
<div class=" col-md-8">
  <h1>
  <%= @profile.display_name %>
</h1>

<p class="well">
  <%= @profile.bio %>
  <br/>
  <% if user_signed_in? %>
  <% if current_user.try(:admin?) || current_user == @profile.user %>
  <%= link_to 'Edit', edit_profile_path(@profile) %>
  <% if current_user.try(:admin?)  %>
   | <%= pluralize(@profile.views, 'view') %>
   <% end %>
  <% end %>
  <% end %>

</p>


<p>
  <%= link_to @profile.website, @profile.website, :target => "_blank" %>
</p>
</div>




</div>

<div class=" col-md-12">
	<hr/>
 <div class="col-md-10 col-md-offset-1">


<ul class="nav nav-pills">
 <li class="active"><a href="<%= vanity_profile_path(@profile.slug )%>" >Latest</a></li>
  <li ><a href="<%= user_popular_path(@profile.slug) %>" >Popular</a></li>
   <li class=""><a href="<%= user_favourites_path(@profile.slug) %>" >Favourites</a></li>
</ul>
<br/>

  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
    <%= render 'shared/posts' %>

    </div>
    <br>
    <%= paginate @posts %>


</div>