<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :display_name %>
    <%= f.input :bio %>
     <%= f.label :image %>
    <%= f.file_field :image %>
    <br/>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :slug, as: :hidden %>
    <%= f.input :website %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
